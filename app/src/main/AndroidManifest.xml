<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="riper.housebuilder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".EditExpenseActivity"
            android:label="@string/title_activity_edit_expense"
            android:parentActivityName=".ExpenseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.ExpenseActivity" />
        </activity>
        <activity
            android:name=".AddExpenseActivity"
            android:label="@string/title_activity_add_expense"
            android:parentActivityName=".ExpenseActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.ExpenseActivity" />
        </activity>
        <activity
            android:name=".AddSpendingActivity"
            android:label="@string/title_activity_add_spending"
            android:parentActivityName=".ProjectDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.ProjectDetailsActivity" />
        </activity>
        <activity
            android:name=".ExpenseActivity"
            android:label="@string/title_activity_expense"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.MainActivity" />
        </activity>
        <activity
            android:name=".AddIncomeActivity"
            android:label="@string/title_activity_add_income"
            android:parentActivityName=".ProjectDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.ProjectDetailsActivity" />
        </activity>
        <activity
            android:name=".EditRoomActivity"
            android:label="@string/title_activity_edit_room"
            android:parentActivityName=".ProjectDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.ProjectDetailsActivity" />
        </activity>
        <activity
            android:name=".AddRoomActivity"
            android:label="@string/title_activity_add_room"
            android:parentActivityName=".ProjectDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.ProjectDetailsActivity" />
        </activity>
        <activity
            android:name=".EditProjectActivity"
            android:label="@string/title_activity_edit_project"
            android:parentActivityName=".ProjectDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.ProjectDetailsActivity" />
        </activity>
        <activity android:name=".AboutActivity" />
        <activity
            android:name=".ProjectDetailsActivity"
            android:label="@string/title_activity_project_details"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.MainActivity" />
        </activity>
        <activity
            android:name=".AddProjectActivity"
            android:label="@string/title_activity_add_project"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="riper.housebuilder.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
